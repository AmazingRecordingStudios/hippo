<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="it.amazingrecordingstudios.hippo"
    android:installLocation="preferExternal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="it.amazingrecordingstudios.hippo.ui.AboutActivity"></activity>
        <activity android:name="it.amazingrecordingstudios.hippo.ui.CreditsActivity" />
        <activity android:name="it.amazingrecordingstudios.hippo.ui.PlaylistsActivity" />
        <activity android:name="it.amazingrecordingstudios.hippo.ui.QuotePagerActivity">
            <intent-filter>
                <action android:name="it.amazingrecordingstudios.hippo.DEMO" />
                <action android:name="it.amazingrecordingstudios.hippo.PLAY" />
            </intent-filter>
        </activity>
        <activity android:name="it.amazingrecordingstudios.hippo.ui.QuoteActivity" />
        <activity android:name="it.amazingrecordingstudios.hippo.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>